{
  "port": 3000,
  "cors": true,
  "cache": 0,
  "showDir": false,
  "autoIndex": false,
  "ext": "html",
  "fallback": "index.html",
  "single": true,
  "rewrites": [
    {
      "source": "/**",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "**/*.@(js|css)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        },
        {
          "key": "Pragma",
          "value": "no-cache"
        },
        {
          "key": "Expires",
          "value": "0"
        }
      ]
    }
  ]
}
