{
  "name": "cashflow-game",
  "version": "1.0.0",
  "description": "CASHFLOW game with modern architecture",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && node index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "test": "node test-automation.js",
    "auto": "node auto-start.js",
    "clean": "pkill -f 'npm start' && pkill -f 'node index.js' && pkill -f 'concurrently'",
    "reset": "npm run clean && sleep 3 && npm start"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "cashflow",
    "game",
    "react",
    "nodejs",
    "websocket",
    "mongodb"
  ],
  "author": "CASHFLOW Team",
  "license": "MIT"
}
